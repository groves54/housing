<p id="notice"><%= notice %></p>

<h1>Inspections</h1>

<table>
  <thead>
    <tr>
      <th>Inspectiondate</th>
      <th>Inspectionstatus</th>
      <th>Inspectioncomment</th>
      <th>Apartmentid</th>
      <th>Inspectorid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @inspections.each do |inspection| %>
      <tr>
        <td><%= inspection.inspectionDate %></td>
        <td><%= inspection.inspectionStatus %></td>
        <td><%= inspection.inspectionComment %></td>
        <td><%= inspection.apartmentID %></td>
        <td><%= inspection.inspectorID %></td>
        <td><%= link_to 'Show', inspection %></td>
        <td><%= link_to 'Edit', edit_inspection_path(inspection) %></td>
        <td><%= link_to 'Destroy', inspection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

