<h1>Vehicles</h1>

<table>
  <thead>
    <tr>
      <th>Vehicleidentificationnumber</th>
      <th>Vehicleplate</th>
      <th>Vehiclecolor</th>
      <th>Vehiclemanufacturer</th>
      <th>Vehiclebrand</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @vehicles.each do |vehicle| %>
      <tr>
        <td><%= vehicle.vehicleIdentificationNumber %></td>
        <td><%= vehicle.vehiclePlate %></td>
        <td><%= vehicle.vehicleColor %></td>
        <td><%= vehicle.vehicleManufacturer %></td>
        <td><%= vehicle.vehicleBrand %></td>
        <td><%= link_to 'Show', vehicle %></td>
        <td><%= link_to 'Edit', edit_vehicle_path(vehicle) %></td>
        <td><%= link_to 'Destroy', vehicle, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

