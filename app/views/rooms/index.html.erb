<p id="notice"><%= notice %></p>

<h1>Rooms</h1>

<table>
  <thead>
    <tr>
      <th>Roomplace</th>
      <th>Roomnumber</th>
      <th>Roomrent</th>
      <th>Roomavailability</th>
      <th>Hallname</th>
      <th>Apartmentid</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @rooms.each do |room| %>
      <tr>
        <td><%= room.roomPlace %></td>
        <td><%= room.roomNumber %></td>
        <td><%= room.roomRent %></td>
        <td><%= room.roomAvailability %></td>
        <td><%= room.hallName %></td>
        <td><%= room.apartmentID %></td>
        <td><%= link_to 'Show', room %></td>
        <td><%= link_to 'Edit', edit_room_path(room) %></td>
        <td><%= link_to 'Destroy', room, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

