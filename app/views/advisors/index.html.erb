<h1>Advisors</h1>

<table>
  <thead>
    <tr>
      <th>Advisorfname</th>
      <th>Advisorlname</th>
      <th>Advisorposition</th>
      <th>Advisordepartment</th>
      <th>Advisorphone</th>
      <th>Advisoremail</th>
      <th>Advisorroom</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @advisors.each do |advisor| %>
      <tr>
        <td><%= advisor.advisorFname %></td>
        <td><%= advisor.advisorLname %></td>
        <td><%= advisor.advisorPosition %></td>
        <td><%= advisor.advisorDepartment %></td>
        <td><%= advisor.advisorPhone %></td>
        <td><%= advisor.advisorEmail %></td>
        <td><%= advisor.advisorRoom %></td>
        <td><%= link_to 'Show', advisor %></td>
        <td><%= link_to 'Edit', edit_advisor_path(advisor) %></td>
        <td><%= link_to 'Destroy', advisor, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

