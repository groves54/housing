<h1>Apartments</h1>

<table>
  <thead>
    <tr>
      <th>Apartmentcity</th>
      <th>Apartmentstreet</th>
      <th>Apartmentzip</th>
      <th>Apartmentnumofrooms</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @apartments.each do |apartment| %>
      <tr>
        <td><%= apartment.apartmentCity %></td>
        <td><%= apartment.apartmentStreet %></td>
        <td><%= apartment.apartmentZip %></td>
        <td><%= apartment.apartmentNumOfRooms %></td>
        <td><%= link_to 'Show', apartment %></td>
        <td><%= link_to 'Edit', edit_apartment_path(apartment) %></td>
        <td><%= link_to 'Destroy', apartment, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

